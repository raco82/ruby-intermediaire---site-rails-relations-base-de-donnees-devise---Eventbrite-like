<div class="jumbotron jumbotron-center shadow" style="background-color:#F8F9FA;">
<h1>Liste de tous les événements disponibles</h1>
</div>

<div class="jumbotron jumbotron-center shadow" style="background-color:#F8F9FA;">

<table class="table">
  <thead class="thead-light">
    <tr>
      <td>ID</td>
      <td>Description</td>
      <td>Place</td>
      <td>Creator</td>
    </tr>
  </thead>
<% @events.each do |event| %>
  <tr>
    <td><%= link_to event.id, event_path(event.id) %></td>
    <td><%= event.desc %></td>
    <td><%= event.place %></td>
    <td><%= event.creator.name %></td>
  </tr>
<% end %>
</table>
<center>
<%= button_to 'CRÉER UN ÉVÉNEMENT', new_event_path, method: :get, class:'btn btn-orange' %>
</center>
</div>
