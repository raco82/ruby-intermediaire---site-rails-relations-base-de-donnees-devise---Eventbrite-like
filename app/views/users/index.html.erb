<div class="container-fluid">
  <div id="carouselExampleSlidesOnly" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="/img/homepage_hero_banner_1.jpg?auto=yes" alt="carousel image">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/img/homepage_hero_banner_2.jpg?auto=yes" alt="carousel image">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/img/homepage_hero_banner_3.jpg?auto=yes" alt="carousel image">
      </div>
    </div>
  </div>
</div>

<div class="content justify-content-center">

  <div class="jumbotron jumbotron-center shadow" style="margin-top:-190px; position:absolute; width: 1052px; background-color:#ffffff;">
    <div class="post">
      <h2 style="color:#f8784e;">Trouvez votre prochaine expérience</h2>
      <form class="form-inline">
        <input type="text" class="form-control form-control-lg flex-grow-1" placeholder="Rechercher événements" aria-label="events" aria-describedby="basic-addon1">
        <button type="submit" class="btn btn-orange btn-lg">RECHERCHER</button>
      </div>
    </div>

    <div class="post">
      <div class="jumbotron" style="background-color:#ffffff;">

        <h2>Événements populaires</h2>

        <table class="table">
          <thead class="thead-light">
            <tr>
              <td>ID</td>
              <td>Name</td>
              <td>Created events</td>
              <td>Participated events</td>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.id, user_path(user.id) %></td>
              <td><%= user.name %></td>
              <td><%= user.created_events.count %></td>
              <td><%= user.participated_events.count %></td>
            </tr>
          <% end %>
        </table>

        <%= link_to "CRÉER UN ÉVÉNEMENT", events_path, class: "btn btn-orange" %>

      </div>

    </div>
  </div>
